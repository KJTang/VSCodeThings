{
	"name": "quickcommand",
	"displayName": "QuickCommand",
	"description": "quick run configured commands",
	"author": "kjtang",
	"publisher": "kjtang",
	"repository": {
		"type": "git",
		"url": "https://github.com/KJTang/VSCodeThings/tree/master/QuickCommand"
	}, 
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.41.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:extension.quickcommand"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "extension.quickcommand",
                "title": "Quick Command",
				"category": "Quick Command"
			}
		], 
		"configuration": {
			"type": "object",
			"title": "configuration for QuickCommand",
			"properties": {
				"quickcommand.commands": {
					"type": [
						"array",
						"null"
					],
					"items": {
						"type": "object",
						"properties": {
							"label": {
								"type": "string",
								"description": "name of current cfg"
							},
							"description": {
								"type": "string"
							},
							"command": {
								"type": "string", 
								"description": "command to run, such as 'ehco hello'"
							}
						}
					},
					"default": [
						{
							"label": "Hello",
							"description": "echo hello",
							"command": "echo hello"
						}
					], 
					"description": "Quick run commands"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.41.0",
		"glob": "^7.1.5",
		"mocha": "^6.2.2",
		"typescript": "^3.6.4",
		"tslint": "^5.20.0",
		"vscode-test": "^1.2.2"
	}
}
